<UserControl x:Class="ShamrockRemoteAgent.MasterTester.Views.GetHardwareStatusRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="6">

        <!-- Card -->
        <Border Background="#020617"
                CornerRadius="14"
                Padding="28"
                Width="620"
                BorderBrush="#1E293B"
                BorderThickness="1"
                HorizontalAlignment="Left">

            <Border.Effect>
                <DropShadowEffect BlurRadius="24"
                                  ShadowDepth="2"
                                  Opacity="0.35"
                                  Color="#000000"/>
            </Border.Effect>

            <StackPanel>

                <!-- Header -->
                <TextBlock Text="Get Hardware Status"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,6"/>

                <TextBlock Text="Retrieve the status of connected hardware for a client"
                           Foreground="#94A3B8"
                           Margin="0,0,0,28"/>

                <!-- Client ID -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Client ID"
                               FontWeight="Medium"
                               Foreground="White"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="ClientIdBox"
                             Height="36"
                             FontSize="18"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             Text="1"/>
                </StackPanel>

                <!-- Info Size (fixed 16) -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Info Size (bytes, fixed 16)"
                               FontWeight="Medium"
                               Foreground="White"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="InfoSizeBox"
                             Height="36"
                             FontSize="18"
                             Text="16"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             IsReadOnly="True"/>
                </StackPanel>

                <!-- Block On Req (fixed 0) -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Block On Request (fixed 0)"
                               FontWeight="Medium"
                               Foreground="White"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="BlockOnReqBox"
                             Height="36"
                             FontSize="18"
                             Text="0"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             IsReadOnly="True"/>
                </StackPanel>

                <!-- Action Button -->
                <Button Content="Get Hardware Status"
                        Width="220"
                        Height="42"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Background="#2563EB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OnGetHardwareStatusClicked">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1E40AF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
