<UserControl x:Class="ShamrockRemoteAgent.MasterTester.Views.SendMessageRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="6">

        <!-- Card -->
        <Border Background="#020617"
                CornerRadius="12"
                Padding="24"
                Width="600"
                HorizontalAlignment="Left"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="2"
                                  Opacity="0.35"
                                  Color="Black"/>
            </Border.Effect>

            <StackPanel>

                <!-- Header -->
                <TextBlock Text="Send Message Request"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,4"/>

                <TextBlock Text="Send a message buffer to a connected client"
                           Foreground="#94A3B8"
                           Margin="0,0,0,20"/>

                <!-- Client ID -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Client ID"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="ClientIdBox"
                             Height="36"
                             Text="1"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"/>
                </StackPanel>
                <!-- Client Message -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Client Message (hex or text)"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="ClientMsgBox"
                             Height="100"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"/>
                </StackPanel>

                <!-- Status on TX -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Status on TX"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="StatusOnTxBox"
                             Height="36"
                             Text="0"
                             IsReadOnly="True"
                             Cursor="Hand"
                             Background="#020617"
                             Foreground="#94A3B8"
                             BorderBrush="#334155"/>
                </StackPanel>

                <!-- Block on Send -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Block on Send"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="BlockOnSendBox"
                             Height="36"
                             Text="0"
                             IsReadOnly="True"
                             Cursor="Hand"
                             Background="#020617"
                             Foreground="#94A3B8"
                             BorderBrush="#334155"/>
                </StackPanel>

                <!-- Action -->
                <Button Content="Submit"
                        Height="40"
                        Width="180"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Background="#10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OnSendMessageClicked">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1E40AF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
