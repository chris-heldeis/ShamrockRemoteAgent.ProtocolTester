<UserControl x:Class="ShamrockRemoteAgent.MasterTester.Views.ReadMessageRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Dropdown Items -->
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="6"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Full Dark ComboBox -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">

                                <Grid>
                                    <ContentPresenter Margin="8,0,30,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"/>

                                    <ToggleButton HorizontalAlignment="Right"
                                                  Width="30"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}">

                                        <TextBlock Text="▼"
                                                   Foreground="#94A3B8"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">

                                <Border Background="#020617"
                                        BorderBrush="#334155"
                                        BorderThickness="1"
                                        CornerRadius="6">

                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="6">

        <!-- Card -->
        <Border Background="#020617"
                CornerRadius="12"
                Padding="24"
                Width="600"
                HorizontalAlignment="Left"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="2"
                                  Opacity="0.25"
                                  Color="Black"/>
            </Border.Effect>

            <StackPanel>

                <!-- Header -->
                <TextBlock Text="Read Message Request"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,4"/>

                <TextBlock Text="Read a message buffer from a connected client"
                           Foreground="#94A3B8"
                           Margin="0,0,0,20"/>

                <!-- Client ID -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Client ID"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="ClientIdBox"
                             Height="36"
                             FontSize="18"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"
                             Text="1"/>
                </StackPanel>

                <!-- Buffer Size -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Buffer Size (bytes)"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="BufferSizeBox"
                             Height="36"
                             FontSize="18"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"
                             Text="0"/>
                </StackPanel>

                <!-- Block on Read -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Block on Read"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <ComboBox x:Name="BlockOnReadBox"
                              Style="{StaticResource DarkComboBoxStyle}"
                              ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                              SelectedIndex="0"
                              FontSize="18"
                              Height="36">
                    </ComboBox>
                </StackPanel>

                <!-- Action -->
                <Button Content="Submit"
                        Height="40"
                        Width="180"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Background="#10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OnReadMessageClicked">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#047857"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
