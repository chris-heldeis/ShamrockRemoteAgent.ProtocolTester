<UserControl x:Class="ShamrockRemoteAgent.MasterTester.Views.ClientConnectRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:vm="clr-namespace:ShamrockRemoteAgent.MasterTester.ViewModels"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:ClientConnectRequestViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>

        <!-- Dropdown Items -->
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="6"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Full Dark ComboBox -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">

                                <Grid>
                                    <ContentPresenter Margin="8,0,30,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"/>

                                    <ToggleButton HorizontalAlignment="Right"
                                                  Width="30"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}">

                                        <TextBlock Text="▼"
                                                   Foreground="#94A3B8"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">

                                <Border Background="#020617"
                                        BorderBrush="#334155"
                                        BorderThickness="1"
                                        CornerRadius="6">

                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="6">

        <!-- Card -->
        <Border Background="#020617"
                CornerRadius="12"
                Padding="24"
                Width="620"
                HorizontalAlignment="Left"
                BorderBrush="#1E293B"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="2"
                                  Opacity="0.35"
                                  Color="Black"/>
            </Border.Effect>

            <StackPanel>

                <!-- Header -->
                <TextBlock Text="Client Connect Request"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,4"/>

                <TextBlock Text="Build and send a client connection packet"
                           Foreground="#94A3B8"
                           Margin="0,0,0,20"/>

                <!-- Device ID -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Device ID"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="DeviceIdBox"
                             Height="36"
                             FontSize="18"
                             Text="{Binding DeviceID}"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"/>
                </StackPanel>

                <!-- Protocol -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Protocol"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <ComboBox x:Name="ProtocolBox"
                              ItemsSource="{Binding ProtocolValues}"
                              SelectedItem="{Binding Protocol}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                              FontSize="18"
                              Height="36"
                              Padding="4"
                              HorizontalContentAlignment="Left"/>
                </StackPanel>

                <!-- TX Buffer -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="TX Buffer Size"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="TxBufBox"
                             Height="36"
                             FontSize="18"
                             Text="{Binding TxBufSize}"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"/>
                </StackPanel>

                <!-- RX Buffer -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="RX Buffer Size"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="RxBufBox"
                             Height="36"
                             FontSize="18"
                             Text="{Binding RxBufSize}"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#334155"/>
                </StackPanel>

                <!-- Self Packetize -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Self Packetize"
                               FontWeight="Medium"
                               Foreground="#CBD5E1"
                               Margin="0,0,0,6"/>
                    <ComboBox x:Name="SelfPacketizeBox"
                              ItemsSource="{Binding SelfPacketizeValues}"
                              SelectedItem="{Binding SelfPacketize}"
                              Style="{StaticResource DarkComboBoxStyle}"
                              ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                              FontSize="18"
                              Height="36"/>
                </StackPanel>

                <!-- Action -->
                <Button Content="Submit"
                        Height="40"
                        Width="160"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Background="#2563EB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OnClientConnectRequestClicked">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1E40AF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
