<UserControl x:Class="ShamrockRemoteAgent.MasterTester.Views.CloseRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="6">

        <!-- Card -->
        <Border Background="#020617"
                CornerRadius="14"
                Padding="28"
                Width="620"
                BorderBrush="#1E293B"
                BorderThickness="1"
                HorizontalAlignment="Left">

            <Border.Effect>
                <DropShadowEffect BlurRadius="24"
                                  ShadowDepth="2"
                                  Opacity="0.35"
                                  Color="#000000"/>
            </Border.Effect>

            <StackPanel>

                <!-- Header -->
                <TextBlock Text="Close Request"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#E5E7EB"
                           Margin="0,0,0,6"/>

                <TextBlock Text="Close the active master session"
                           Foreground="#94A3B8"
                           Margin="0,0,0,28"/>

                <!-- Action Button -->
                <Button Content="Submit"
                        Width="220"
                        Height="42"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Left"
                        Background="#EF4444"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OnCloseClicked">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DC2626"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#991B1B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
