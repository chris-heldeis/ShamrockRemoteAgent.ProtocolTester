<UserControl x:Class="ShamrockRemoteAgent.MasterTester.Views.PingRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="720">

    <Grid Margin="24">

        <Border Background="White"
                CornerRadius="12"
                Padding="24"
                Width="500"
                HorizontalAlignment="Left">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="2"
                                  Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>

                <!-- Header -->
                <TextBlock Text="Ping Request"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>

                <TextBlock Text="Send a simple ping packet to verify connectivity"
                           Foreground="Gray"
                           Margin="0,0,0,24"/>

                <!-- Action -->
                <Button Content="Send Ping"
                        Width="160"
                        Height="40"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Left"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OnSendPingClicked"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
