<Window x:Class="ShamrockRemoteAgent.ClientTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ShamrockRemoteAgent.ClientTester.Views"
        Title="TCP Protocol Client Tester"
        Width="1200"
        Height="840"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <!-- ========================= -->
    <!--        Resources          -->
    <!-- ========================= -->
    <Window.Resources>

        <!-- Colors -->
        <Color x:Key="AppBg">#0F172A</Color>
        <Color x:Key="CardBg">#020617</Color>
        <Color x:Key="BorderColor">#1E293B</Color>
        <Color x:Key="Primary">#3B82F6</Color>
        <Color x:Key="TextMain">#E5E7EB</Color>
        <Color x:Key="TextSub">#94A3B8</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBg}" />
        <SolidColorBrush x:Key="HeaderBrush" Color="#020617" />
        <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardBg}" />
        <SolidColorBrush x:Key="BorderBrushDark" Color="{StaticResource BorderColor}" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
        <SolidColorBrush x:Key="TextMainBrush" Color="{StaticResource TextMain}" />
        <SolidColorBrush x:Key="TextSubBrush" Color="{StaticResource TextSub}" />

        <!-- Title Style -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
        </Style>

    </Window.Resources>

    <!-- ========================= -->
    <!--          Layout           -->
    <!-- ========================= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Header ===== -->
        <Border Grid.Row="0"
                Background="{DynamicResource HeaderBrush}"
                Padding="20"
                BorderBrush="#1E293B"
                BorderThickness="0,0,0,1">

            <TextBlock Text="RP1210 TCP Protocol Client Tester"
                       Style="{StaticResource TitleText}"/>
        </Border>

        <!-- ===== Body ===== -->
        <Grid Grid.Row="1">
            <ContentControl x:Name="MainContent"/>
        </Grid>
    </Grid>
</Window>
